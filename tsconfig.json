{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2015",                    // emit ES modules for browser (import/export)
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,                       // we'll tighten later, incrementally
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "sourceMap": true,
    "noEmitOnError": false                 // always emit dist/app.js even if types aren't perfect yet
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist"]
}
